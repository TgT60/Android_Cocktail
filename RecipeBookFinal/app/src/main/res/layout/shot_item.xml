<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

     <LinearLayout
         android:id="@+id/shotBg"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical"
         android:paddingBottom="30dp"
         android:background="@color/black">

         <ImageView
             android:id="@+id/shotImage"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             app:srcCompat="@drawable/ic_shot"
             android:contentDescription="@string/app_name" />

         <TextView
             android:id="@+id/shotTitle"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:textColor="@color/white"
             android:fontFamily="@font/ubuntu_mono_bold"
             android:textSize="20dp"
             android:layout_margin="10dp"
             android:text="@string/app_name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:fontFamily="@font/ubuntu_mono"
                android:textSize="14dp"
                android:layout_margin="10dp"
                android:text="@string/short_description" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:fontFamily="@font/ubuntu_mono"
                android:textSize="14dp"
                android:layout_margin="10dp"
                android:text="@string/alcohol_strength" />

        </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent">

             <TextView
                 android:id="@+id/descriptionDate"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:textColor="@color/white"
                 android:fontFamily="@font/ubuntu_mono"
                 android:textSize="14dp"
                 android:layout_margin="10dp"
                 android:text="@string/app_name" />

             <TextView
                 android:id="@+id/strengthData"
                 android:layout_width="100dp"
                 android:layout_height="wrap_content"
                 android:textColor="@color/white"
                 android:fontFamily="@font/ubuntu_mono"
                 android:textSize="14dp"
                 android:layout_margin="10dp"
                 android:text="@string/app_name" />

         </LinearLayout>
     </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>